<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poetry.dao.UserDao">

    <sql id="Base_Column_List">
        userId, username, nickname, createTime, updateTime, token, userIndex
    </sql>

    <select id="getIsExitUser" resultType = "Boolean">
        SELECT
        COUNT(1)
        FROM user_table
        WHERE username = #{username};
    </select>

    <select id="getUserByUsernameAndPassword" resultType="com.poetry.entity.UserDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_table
        WHERE username = #{username} AND password = #{password} LIMIT 1;
    </select>

    <select id="getUserByUserId" resultType="com.poetry.entity.UserDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_table
        WHERE userId = #{userId} LIMIT 1;
    </select>

    <update id="updateUserTokenByUserId">
        UPDATE
        user_table
        SET token = #{token}
        WHERE userId = #{userId}
    </update>

    <select id="getUserByUserId" resultType="com.poetry.entity.UserDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_table
        WHERE userId = #{userId} LIMIT 1;
    </select>

    <insert id="saveUser">
        INSERT INTO user_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                userId,
            </if>
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="nickname != null">
                nickname,
            </if>
            <if test="createTime != null">
                createTime,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="username != null">
                #{username},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="nickname != null">
                #{nickname},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>


</mapper>